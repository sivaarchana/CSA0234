#include <stdio.h>

int main() {
    int arr[100], n, i, min;

    // Input size of array
    printf("Enter number of elements in the array: ");
    scanf("%d", &n);

    // Input array elements
    printf("Enter %d elements:\n", n);
    for(i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }

    // Assume first element is the minimum
    min = arr[0];

    // Loop through array to find minimum
    for(i = 1; i < n; i++) {
        if(arr[i] < min) {
            min = arr[i];
        }
    }

    // Output minimum element
    printf("Minimum element: %d\n", min);

    return 0;
}
