#include <stdio.h>

int main() {
    char oldName[100], newName[100];
    int status;

    printf("Enter the current filename: ");
    scanf("%s", oldName);

    printf("Enter the new filename: ");
    scanf("%s", newName);

    status = rename(oldName, newName);

    if (status == 0) {
        printf("File renamed successfully.\n");
    } else {
        perror("Error renaming file");
    }

    return 0;
}
