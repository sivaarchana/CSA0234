#include <stdio.h>

void concatenate(char *str1, char *str2) {
    // Move pointer to end of str1
    while (*str1 != '\0') {
        str1++;
    }

    // Append str2 to str1
    while (*str2 != '\0') {
        *str1 = *str2;
        str1++;
        str2++;
    }

    *str1 = '\0';  // Null-terminate the final string
}

int main() {
    char str1[100], str2[50];

    printf("Enter first string: ");
    gets(str1);  // Or use fgets for safety

    printf("Enter second string: ");
    gets(str2);

    concatenate(str1, str2);  // Concatenate using pointers

    printf("Concatenated string: %s\n", str1);

    return 0;
}
