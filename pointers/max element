#include <stdio.h>

int main() {
    int arr[100], n, i, *ptr, max;

    printf("Enter number of elements: ");
    scanf("%d", &n);

    printf("Enter %d elements:\n", n);
    for(i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }

    ptr = arr;     // Pointer points to the array
    max = *ptr;    // Initialize max with first element

    for(i = 1; i < n; i++) {
        if(*(ptr + i) > max) {
            max = *(ptr + i);
        }
    }

    printf("Maximum element = %d\n", max);

    return 0;
}
