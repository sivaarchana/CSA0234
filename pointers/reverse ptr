#include <stdio.h>

void reverse(int *arr, int n) {
    int *start = arr;
    int *end = arr + n - 1;
    int temp;

    while (start < end) {
        temp = *start;
        *start = *end;
        *end = temp;

        start++;
        end--;
    }
}

int main() {
    int arr[100], n, i;

    printf("Enter number of elements: ");
    scanf("%d", &n);

    printf("Enter %d elements:\n", n);
    for (i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }

    reverse(arr, n);  // Reverse using pointer-based function

    printf("Reversed array:\n");
    for (i = 0; i < n; i++) {
        printf("%d ", *(arr + i));
    }

    printf("\n");
    return 0;
}
