#include <stdio.h>

int main() {
    int arr[100], n, i, value, found = 0;

    // Input size of array
    printf("Enter number of elements: ");
    scanf("%d", &n);

    // Input array elements
    printf("Enter %d elements:\n", n);
    for(i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }

    // Input value to remove
    printf("Enter the value to remove: ");
    scanf("%d", &value);

    // Search for the value and remove it
    for(i = 0; i < n; i++) {
        if(arr[i] == value) {
            found = 1;
            // Shift elements to left
            for(int j = i; j < n - 1; j++) {
                arr[j] = arr[j + 1];
            }
            n--; // Reduce array size
            i--; // Check same index again in case of duplicates
        }
    }

    if(found) {
        printf("Array after removing %d:\n", value);
        for(i = 0; i < n; i++) {
            printf("%d ", arr[i]);
        }
        printf("\n");
    } else {
        printf("Value %d not found in the array.\n", value);
    }

    return 0;
}
