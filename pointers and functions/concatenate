#include <stdio.h>

void concatenate(char *str1, char *str2) {
    // Move str1 pointer to the end of first string
    while (*str1 != '\0') {
        str1++;
    }

    // Copy str2 to the end of str1
    while (*str2 != '\0') {
        *str1 = *str2;
        str1++;
        str2++;
    }

    *str1 = '\0';  // Null terminate the final string
}

int main() {
    char str1[100], str2[50];

    printf("Enter first string: ");
    gets(str1);  // unsafe, but okay for simple practice

    printf("Enter second string: ");
    gets(str2);

    concatenate(str1, str2);  // Function call with pointers

    printf("Concatenated string: %s\n", str1);

    return 0;
}
