#include <stdio.h>

int main() {
    int arr[100], n, i, even = 0, odd = 0;
    int *ptr;

    printf("Enter the number of elements: ");
    scanf("%d", &n);

    printf("Enter %d elements:\n", n);
    for(i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }

    ptr = arr;  // pointer to array

    for(i = 0; i < n; i++) {
        if(*(ptr + i) % 2 == 0)
            even++;
        else
            odd++;
    }

    printf("Total even numbers: %d\n", even);
    printf("Total odd numbers : %d\n", odd);

    return 0;
}
