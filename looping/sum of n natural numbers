#include <stdio.h>

int main() {
    int n, i, sum = 0;

    // Input the value of n
    printf("Enter the value of n: ");
    scanf("%d", &n);

    // Calculate sum using a loop
    for (i = 1; i <= n; i++) {
        sum += i;
    }

    // Print the result
    printf("Sum of first %d natural numbers is: %d\n", n, sum);

    return 0;
}
