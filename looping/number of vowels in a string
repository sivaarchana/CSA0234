#include <stdio.h>
#include <string.h>

int main() {
    char str[100];
    int i, count = 0;

    // Input string
    printf("Enter a string: ");
    fgets(str, sizeof(str), stdin); // safer input with spaces

    // Loop through each character
    for(i = 0; str[i] != '\0'; i++) {
        // Convert to lowercase for simplicity
        char ch = str[i];
        if (ch == 'a' || ch == 'e' || ch == 'i' ||
            ch == 'o' || ch == 'u' ||
            ch == 'A' || ch == 'E' || ch == 'I' ||
            ch == 'O' || ch == 'U') {
            count++;
        }
    }

    // Output result
    printf("Number of vowels in the string: %d\n", count);

    return 0;
}
